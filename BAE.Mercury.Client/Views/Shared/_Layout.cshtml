<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mercury Neo</title>
        @RenderSection("CSS", required: false)

        @RenderSection("scripts")
         
    </head>
    <body>
<!-- start wrapper -->
        <div id="wrapper">     
            <div id="header">
                <div id="logo"><a href="#"><img src="~/images/bg-logo.png" width="138" height="38" alt="Mercury" /></a></div>
                <div id="top-section">
                    <p>Welcome, @User.Identity.Name</p>
			            <ul id="top-link">
				            <li><a href="#" id="logout"><img src="~/images/icon-logout_menu.png" alt="Admin Menu" width="16" height="16" />logout</a></li>
				            <li><a href="#" id="admin"><img src="~/images/icon-admin_menu.png" alt="Logout Menu" width="16" height="16" />settings</a></li>
			            </ul>
                </div>
            </div>

            <div id="buttons">
               <div class="col-wrap">
                <div class="col-left">&nbsp;</div>
                    <div class="col-middle" id="buttons-right">
                        <!--top menu buttons start -->
                        @RenderSection("MenuButtons", required: false)
                        <!--top menu buttons end -->
                    </div>
			        <div class="col-right">
				        <ul class="buttons">
					        <li id="btn-address"><a href="#">Address Book</a><span>Address Book</span></li>
                            <!--left menu buttons start -->
                            @RenderSection("LeftMenuButtons", required: false)
                            <!--left menu buttons end -->
				        </ul>
			        </div>
    		    </div>
            </div>

            <div id="content">
		        <div class="col-wrap">
                    <!--side bar start -->
                    @RenderSection("SideBar", required: false)
                    <!--side bar end -->

                    <!--body start -->
                    @RenderBody()
                    <!--body end -->

                </div>
            </div>
            @*RenderSection("Scripts", required: false)*@
        </div>
<!-- end wrapper -->
    </body>
</html>
